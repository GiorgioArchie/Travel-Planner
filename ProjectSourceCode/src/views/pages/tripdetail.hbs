<!-- Full-page wrapper for background -->
<div class="container-fluid min-vh-100" id="tripdetailpage">
  <div class="container py-5">
    
    <!-- Trip Header -->
    <h1 class="text-center mb-4">{{trip.trip_name}}</h1>
    {{> message}}

    <!-- Top Right Buttons: Add Event & Add Journal -->
    <div class="d-flex justify-content-end gap-3 mb-4">
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createEventModal-{{trip.trip_id}}">
        <i class="bi bi-plus-circle"></i> Add Event
      </button>
      <a href="/journal?tripId={{trip.trip_id}}" class="btn btn-primary">
        <i class="bi bi-journal-plus"></i> Add Journal
      </a>
    </div>

    <!-- Section: Trip Events -->
    <h3 class="mt-5 mb-3 fw-bold" style="font-family: 'Georgia', serif; color: #5a9bd5;">
      Trip Events
    </h3>
    {{#if events.length}}
      <div id="eventCarousel" class="carousel slide border border-light rounded shadow" data-bs-ride="carousel">

        <!-- Indicators -->
        <div class="carousel-indicators">
          {{#each events}}
            <button type="button" data-bs-target="#eventCarousel" data-bs-slide-to="{{@index}}" class="{{#if @first}}active{{/if}}" 
            aria-current="{{#if @first}}true{{/if}}" aria-label="Slide {{inc @index}}"></button>
          {{/each}}
        </div>       

        <!-- Carousel Inner -->
        <div class="carousel-inner">
          {{#each events}}
            <div class="carousel-item {{#if @first}}active{{/if}}">
              <div class="card p-4 text-center" style="background-color: #d2f5e3; color: #1a1a1a; min-height: 300px;">
                <h2>{{activity}}</h2>
                <p><strong>Time:</strong> {{start_time}} â€“ {{end_time}}</p>
                {{#if city}}<p><strong>City:</strong> {{city}}</p>{{/if}}
                {{#if country}}<p><strong>Country:</strong> {{country}}</p>{{/if}}
                {{#if description}}<p><strong>Description:</strong> {{description}}</p>{{/if}}

                <!-- Edit/Delete Buttons -->
                <div class="d-flex justify-content-center gap-3 mt-4">
                  <button class="btn btn-primary btn-sm px-4" data-bs-toggle="modal" data-bs-target="#editEventModal-{{event_id}}">
                    <i class="bi bi-pencil-square"></i> Edit
                  </button>
                  <form action="/events/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this event?')">
                    <input type="hidden" name="event_id" value="{{event_id}}">
                    <input type="hidden" name="trip_id" value="{{../trip.trip_id}}">
                    <button class="btn btn-danger btn-sm px-4" type="submit">
                      <i class="bi bi-trash"></i> Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
          {{/each}}
        </div>

        <!-- Carousel Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#eventCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon bg-light rounded-circle" aria-hidden="true" style="width: 3rem; height: 3rem;"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#eventCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon bg-light rounded-circle" aria-hidden="true" style="width: 3rem; height: 3rem;"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    {{else}}
      <p class="text-muted text-center">No events added for this trip yet.</p>
    {{/if}}

    <!-- Section: Trip Journal -->
    <h3 class="mt-5 mb-3 fw-bold" style="font-family: 'Georgia', serif; color: #4f9a84;">
      Trip Journal
    </h3>
    <div class="card shadow-sm mb-4" style="background-color: #f2f2f2;">
      <div class="card-body">
        {{#if journals.length}}
          {{#with journals.[0]}}
            <h5 class="text-center">Journal</h5>
            <p>{{comments}}</p>

            {{#if images.length}}
              <div class="mt-3">
                <h6>Photos:</h6>
                <div class="row">
                  {{#each images}}
                    <div class="col-4 col-md-3 col-lg-2 mb-2">
                      <img src="{{image_url}}" alt="Journal Image" class="img-fluid rounded shadow-sm">
                    </div>
                  {{/each}}
                </div>
              </div>
            {{/if}}

            <div class="text-end mt-3">
              <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editJournalModal-{{journal_id}}">
                <i class="bi bi-pencil-square"></i> Edit Journal
              </button>
              <!-- Edit Journal Modal -->
              <div class="modal fade" id="editJournalModal-{{journal_id}}" tabindex="-1" aria-labelledby="editJournalModalLabel-{{journal_id}}" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <form action="/journal/edit" method="POST" enctype="multipart/form-data">
                      <div class="modal-header">
                        <h5 class="modal-title" id="editJournalModalLabel-{{journal_id}}">Edit Journal</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>

                      <div class="modal-body">
                        <input type="hidden" name="journalId" value="{{journal_id}}">
                        <input type="hidden" name="tripId" value="{{../trip.trip_id}}">

                        <div class="mb-3">
                          <label for="comments-{{journal_id}}" class="form-label">Comment</label>
                          <textarea class="form-control" id="comments-{{journal_id}}" name="comment" rows="4" required>{{comments}}</textarea>
                        </div>

                        <div class="mb-3">
                          <label for="photos" class="form-label">Add Photos (optional)</label>
                          <input type="file" class="form-control" id="photos" name="photos" multiple />
                        </div>
                      </div>

                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">
                          <i class="bi bi-save"></i> Save Changes
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>

            </div>
          {{/with}}
        {{else}}
          <p class="text-muted text-center mb-0">No journal entry added yet for this trip.</p>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<!-- Modal for creating an event specific to this trip -->
<div class="modal fade" id="createEventModal-{{trip.trip_id}}" tabindex="-1" aria-labelledby="createEventModalLabel-{{trip.trip_id}}" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/events" method="POST" class="needs-validation" novalidate>
        <div class="modal-header">
          <h5 class="modal-title" id="createEventModalLabel-{{trip.trip_id}}">
            Create an Event for {{trip.trip_name}}
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          <input type="hidden" name="trip_id" value="{{trip.trip_id}}">

          <div class="mb-3">
            <label for="activity-{{trip.trip_id}}" class="form-label">Activity</label>
            <input type="text" class="form-control" id="activity-{{trip.trip_id}}" name="activity" required />
            <div class="invalid-feedback">Please enter an activity.</div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="start_time-{{trip.trip_id}}" class="form-label">Start Time</label>
              <input type="time" class="form-control" id="start_time-{{trip.trip_id}}" name="start_time" required />
              <div class="invalid-feedback">Please choose a start time.</div>
            </div>

            <div class="col-md-6 mb-3">
              <label for="end_time-{{trip.trip_id}}" class="form-label">End Time</label>
              <input type="time" class="form-control" id="end_time-{{trip.trip_id}}" name="end_time" required />
              <div class="invalid-feedback">Please choose an end time.</div>
            </div>

            <div class="col-md-6 mb-3">
              <label for="city-{{trip.trip_id}}" class="form-label">City</label>
              <input type="text" class="form-control" id="city-{{trip.trip_id}}" name="city" required />
              <div class="invalid-feedback">Please choose a city.</div>
            </div>

            <div class="col-md-6 mb-3">
              <label for="country-{{trip.trip_id}}" class="form-label">Country</label>
              <input type="text" class="form-control" id="country-{{trip.trip_id}}" name="country" required />
              <div class="invalid-feedback">Please choose a country.</div>
            </div>
          </div>

          <div class="mb-3">
            <label for="description-{{trip.trip_id}}" class="form-label">Description</label>
            <input type="text" class="form-control" id="description-{{trip.trip_id}}" name="description" />
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-success">
            <i class="bi bi-check-circle"></i> Create Event
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

